<div class="news_letter_section full-content">
    <div class="content">
        <div class="container">
            <div class="grid" style="background-color: {{ section.settings.bg_color }}">
                <div class="grid__item large-up--one-half medium-dow--one-whole">
                    <div class="title-content" style="color: {{ section.settings.title_color }};">
                        <h3 class="title uppercase" style="color: {{ section.settings.title_color }};">{{ section.settings.title }}</h3>
                        {{ section.settings.desc }}
                    </div>
                </div>
                <div class="grid__item large-up--one-half medium-down--one-whole">
                    <div class="form-content">
                        {% include 'newsletter' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

{% schema %}
{
    "name": "news letter",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Join our newsletter"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Description",
            "default": "<p>Get the inside scoop on collabs, restocks, and sales, plus early access to evvvery single launch.</p>"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#C5B097"
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title color",
            "default": "#FFFFFF"
        }
    ]
}
{% endschema %}