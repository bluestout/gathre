{% if page.handle == 'gallery' %}
<div class="page-section">
    {% include 'page-banner', title: page.title %}
    <div class="gallery">
            {{ page.content }}
    </div>
</div>
{% else %}
<div class="page-section">
    {% include 'page-banner', title: page.title %}
    <div class="full-content">
        <div class="content">
            {{ page.content }}
        </div>
    </div>
</div>
{% endif %}


{% schema %}
{
    "name": "page section",
    "settings": [
        {
            "type": "image_picker",
            "id": "feature_image",
            "label": "Feature image"
        },
        {
            "type": "image_picker",
            "id": "mobile_feature_image",
            "label": "Feature image"
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title color"
        },
        {
            "type": "select",
            "id": "pos",
            "label": "Hero banner title postion",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                },
                {
                    "value": "center",
                    "label": "Center"
                }
            ]
        }
    ]
}
{% endschema %}