<div class="collection-banner-section">
  {% include 'collection_banner_page_banner' %}
  {% include 'icon_bar' %}
  <div class="container">
    {% for block in section.blocks %}
        {% if block.type == 'image-text-2' %}
          {% include 'image-text-bottom' with type: block.settings.type %}
        {% endif %}
        {% if block.type == 'image-text' %}
          {% include 'image-text-basic' with type: block.settings.type %}
        {% endif %}
    {% endfor %}
    <div class="full-content">
      <div class="grid__item one-whole">
        {% for product in collection.products %}
            <div class="grid__item large-up--one-quarter medium-down--one-half">
                {% include 'product-item' %}
            </div>
        {% endfor %}
      </div>
    </div>
    
  </div>
</div>

{% schema %}
  {
    "name": "Collection pages",
    "settings": [
      {
        "type": "header",
        "content": "Page banner"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Titlte"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "header",
        "content": "icon bar"
      },
      {
          "type": "color",
          "id": "icon_bar_color",
          "label": "Icon bar backround",
          "default": "#F8F6F3"
      },
      {
        "type": "header",
        "content": "product content"
      },
      {
        "type": "range",
        "id": "products_per_page",
        "label": "Products per page",
        "min": 2,
        "max": 50,
        "step": 1,
        "default": 24
      },
      {
        "type": "range",
        "id": "products_per_row",
        "label": "Products per row on Desktop",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "products_per_row_mobile",
        "label": "Products per row on Mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_price",
        "label": "Show price",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_sale_label",
        "label": "Show sale label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_sold_out_label",
        "label": "Show sold out label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "active_image_swap",
        "label": "Active image swap",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_sorting",
        "label": "Enable collection sorting",
        "default": true
      },
      {
        "type": "text",
        "id": "soldout_label",
        "label": "Sold Out Label",
        "default": "Sold out"
      },
	    {
        "type": "text",
        "id": "sale_label",
        "label": "Sale Label",
        "default": "Sale"
      },
      {
        "type": "text",
        "id": "from",
        "label": "From",
        "default": "from"
      }
    ],
    "blocks":[
        {
            "name": "icon",
            "type": "icon_block",
            "settings": [
                {
                  "type": "header",
                  "content": "desktop icon"
                },
                {
                    "type": "image_picker",
                    "id": "icon_img",
                    "label": "Icon(image)",
                    "info": "35 X 35px recommended"
                },
                {
                    "type": "html",
                    "id": "icon_svg",
                    "label": "Icon(svg)"
                },
                {
                  "type": "header",
                  "content": "mobile icon"
                },
                {
                    "type": "image_picker",
                    "id": "mobile_icon_img",
                    "label": "Icon(image)",
                    "info": "35 X 35px recommended"
                },
                {
                    "type": "html",
                    "id": "mobile_icon_svg",
                    "label": "Icon(svg)"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                }
            ]
        },
        {
          "name": "Image text block",
          "type": "image-text",
          "settings": [
              {
                  "type": "image_picker",
                  "id": "feature_image",
                  "label": "Feature image"
              },
              {
                  "type": "text",
                  "id": "title",
                  "label": "Title",
                  "default": "Premium Look & Feel."
              },
              {
                  "type": "richtext",
                  "id": "desc",
                  "label": "Description"
              },
              {
                  "type": "select",
                  "id": "pos",
                  "label": "Position",
                  "options": [
                      {
                          "value": "left",
                          "label": "Left"
                      },
                      {
                          "value": "right",
                          "label": "Right"
                      }
                  ]
              },
              {
                "type": "text",
                "id": "button_title",
                "label": "Button title"
              },
              {
                "type": "url",
                "id": "button_url",
                "label": "Button url"
              }
          ]
      },
      {
        "name": "Image text block 2",
        "type": "image-text-2",
        "settings": [
            {
                "type": "image_picker",
                "id": "feature_image",
                "label": "image 1"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Premium Look & Feel."
            },
            {
                "type": "richtext",
                "id": "desc",
                "label": "Description"
            }
        ]
      }
    ]
  }
{% endschema %}