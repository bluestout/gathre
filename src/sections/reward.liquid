{% include 'page-banner', title: section.settings.title, desc: section.settings.desc %}
{% for block in section.blocks %}
    
    {% if block.type == 'image' %}
        {% include 'image-text-basic' with type: block.settings.type %}
    {% endif %}

    {% if block.type == 'title' %}
        {% if block.settings.type == 'text-list' %}
            {% include 'text-list' %}
        {% endif %}
        
        {% if block.settings.type == 'icon-block' %}
            {% include 'icon_block' %}
        {% endif %}
        
    {% endif %}

{% endfor %}

