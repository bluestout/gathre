<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
    <head>
        <!-- Google Tag Manager -->
        <script>
            (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({
                'gtm.start': new Date().getTime(),event:'gtm.js'});
                var f=d.getElementsByTagName(s)[0],
                    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';
                j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-W53PPG');
        </script>
        <!-- End Google Tag Manager -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
        <meta name="referrer" content="origin">
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

        <title>{{ page_title }}</title>

        {{ content_for_header }}

        {{ checkout_stylesheets }}

        <!-- inferno / custom CSS -->
        {{ 'checkout.css' | asset_url | stylesheet_tag }}
        
        {{ checkout_scripts }}
        <script type="text/javascript" src="https://route-cdn.s3.amazonaws.com/route-widget-shopify/route-widget-shopify-2.7.2.min.js"></script>
        <style>
        .route-widget {
            justify-content: flex-end !important;
        }
        </style>
    </head>
    <body>
   
        {{ skip_to_content_link }}
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W53PPG" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
        <div class="banner" data-header>
            <div class="wrap checkout-logo">
                {{ content_for_logo }}
            </div>
        </div>

        {{ order_summary_toggle }}

        <div class="content" data-content>
            <div class="wrap">
                <div class="main" role="main">
                    <div class="main__header checkout-logo">
                        {{ content_for_logo }}
                        {{ breadcrumb }}                  
                        {{ alternative_payment_methods }}
                    </div>
                    <div class="main__content">
                        <div class="checkbox-container">
                            {{ content_for_layout }}
                            <div style="float: right; padding-top: 30px;display:none;">
                                <input type="checkbox" class="input-checkbox" id="chkPassport">
                                <label><span>Agree</span></label>
                            </div>
                            {% if checkout.note != blank %}
                            <p><strong style="color: #000;">Gift Message: </strong>{{ checkout.note }}</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="main__footer">
                    {{ content_for_footer }}
                    </div>
                </div>
                <div class="sidebar" role="complementary">
                    <div class="sidebar__header checkout-logo">
                        {{ content_for_logo }}
                    </div>
                    <div class="sidebar__content">
                        {{ content_for_order_summary }}
                        <div id="orderbump"></div>
                    </div>
                </div>
            </div>
        </div>
        
        {{ tracking_code }}
        
        {% comment %} The Vaan Group - Order Bump (2/2) {% endcomment %}
        <script src="https://tvg-order-bump.herokuapp.com/storefront/assets/order-bump.js"></script>
        {% comment %} END OF The Vaan Group - Order Bump (2/2) {% endcomment %}
        {{ 'checkout.js' | asset_url | script_tag }}
    </body>
</html>