  .shopping_link{
    line-height: 60px;
    text-decoration: underline;
    font-size: 12px;
    font-family: 'Gotham Book';
    position: relative;
    padding-left: 35px;
    &::before{
        content: " ";
        background: url({{ 'arrow-left.png' | asset_url }});
        width: 43px;
        height: 28px;
        display: table;
        background-size: contain;
        float: left;
        background-position: center;
        background-repeat: no-repeat;
        position: absolute;
        left: -10px;
        top: -9px;
    }
  }
